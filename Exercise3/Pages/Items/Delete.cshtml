        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ItemName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Size)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Item.ItemID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
